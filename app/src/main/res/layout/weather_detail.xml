<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@null"
    android:paddingLeft="26dp"
    android:paddingRight="26dp"
    tools:context="cn.heyl.weituangou.activity.MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/img03_03g_03" >

            <TextView
                android:id="@+id/tvCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="南京"
                android:textColor="#fff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/adlTv_wendu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/adlTv_wenduLowHigh"
                android:layout_alignLeft="@+id/adlTv_wenduLowHigh"
                android:layout_marginLeft="6dp"
                android:padding="2dp"
                android:text="25°c"
                android:textColor="#fff"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/adlTv_wenduLowHigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="20dp"
                android:text="17/25°C"
                android:textColor="#fff"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ivWeather"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/ivX"
                android:scaleType="fitCenter"
                android:src="@drawable/w0" />

            <ImageView
                android:id="@+id/ivX"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_margin="6dp"
                android:padding="4dp"
                android:src="@drawable/img03_05" />

            <TextView
                android:id="@+id/adlTv_Weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/adlTv_wenduLowHigh"
                android:layout_alignBottom="@+id/adlTv_wenduLowHigh"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/adlTv_wenduLowHigh"
                android:text="晴"
                android:textColor="#fff"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img03_03g_05" >

            <RelativeLayout
                android:id="@+id/rlWeatherTitle"
                android:layout_width="match_parent"
                android:layout_height="62dp" >

                <LinearLayout
                    android:id="@+id/llWeather1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" >

                    <TextView
                        android:id="@+id/adlTv_fengli"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="北风 ：2级"
                        android:textColor="#555"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#ddd" />

                    <TextView
                        android:id="@+id/adlTv_sunrise"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="2dp"
                        android:text="日出： 06:01"
                        android:textColor="#555"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#ddd" />

                    <TextView
                        android:id="@+id/adlTv_pm25"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="2dp"
                        android:text="PM25： 181"
                        android:textColor="#555"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:id="@+id/viewWeather1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/llWeather1"
                    android:background="#ddd" />

                <LinearLayout
                    android:id="@+id/llWeather2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/viewWeather1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" >

                    <TextView
                        android:id="@+id/adlTv_shidu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="湿度 ：66%"
                        android:textColor="#555"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#ddd" />

                    <TextView
                        android:id="@+id/adlTv_sunset"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="2dp"
                        android:text="日落： 18:11"
                        android:textColor="#555"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#ddd" />

                    <TextView
                        android:id="@+id/adlTv_quality"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="2dp"
                        android:text="空气质量：中度"
                        android:textColor="#555"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:id="@+id/viewWeather2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/llWeather2"
                    android:background="#ddd" />
            </RelativeLayout>

            <ListView
                android:id="@+id/lvForecast"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/rlWeatherTitle" >
            </ListView>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>